{
  "manifest_version": 3,
  "name": "ChangeAccountability",
  "version": "1.0.0",
  "description": "Enhance GitHub blame pages with PR metadata",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://github.com/*",
    "*://api.github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "ChangeAccountability Settings"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}